{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noUncheckedIndexedAccess": true,
		"rootDir": "./src",
		"noEmit": true
	},
	"include": ["src"]
}
